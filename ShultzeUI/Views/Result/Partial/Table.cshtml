@model ShultzeUI.Models.Result.ResultModel           

     <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr class="success">
                            <th></th>
                            @for (Int32 i = 0; i < Model.Responses.GetLength(0); i++)
                            {
                                <th>@Model.Options.ElementAt(i).Name</th>
                            }
                            <th><span class="js-show">Show</span></th>
                        </tr>
                    </thead>
                    @for (Int32 i = 0; i < Model.Responses.GetLength(0); i++)
                    {
                        <tr>
                            <td>@Model.Options.ElementAt(i).Name
                            </td>
                            @for (Int32 j = 0; j < Model.Responses.GetLength(1); j++)
                            {
                                <td style="text-align: right; padding: 5px;">
                                    @Model.Responses[i, j]
                                </td>
                            }
                            <td>
                                <span class="js-drop">Drop</span>
                            </td>
                        </tr>    
                    }
                </table>
